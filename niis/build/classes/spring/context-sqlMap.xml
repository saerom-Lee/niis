<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- SqlMap setup for iBATIS Database Layer -->
	<bean id="sqlMapClient" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/sqlmap/nii/niim/sql-map-config.xml"/>
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<!-- SqlMap setup for iBATIS Database Layer -->
	<bean id="sqlMapClient2" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/sqlmap/nii/niis/sql-map-config.xml"/>
		<property name="dataSource" ref="dataSource-sms"/>
	</bean>
	
	<!-- SqlMap setup for iBATIS Database Layer -->
	<bean id="sqlMapClient3" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" value="classpath:/sqlmap/nii/g119/sql-map-config.xml"/>
		<property name="dataSource" ref="dataSource-g119"/>
	</bean>
	
	<bean id="sqlMapClientPostgres" class="egovframework.rte.psl.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:/sqlmap/nii/niim/sql-map-config-postgres.xml</value>
			</list>
		</property>
		<property name="dataSource" ref="dataSource-postgres"/>
	</bean>
</beans>
