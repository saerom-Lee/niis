	<typeAlias alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap" />
	
	<sql id="Img_air_policy">
		<!-- xacml 권한적용 -->
		   AND G.SECURITY_CDE IN (''
		<isNotEmpty property="_IMG_AIR_POLICY_">
			<iterate property="_IMG_AIR_POLICY_">
			   , #_IMG_AIR_POLICY_[]#
			</iterate>
		</isNotEmpty>
		       )
	</sql>
	
