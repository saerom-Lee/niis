	<select id="policyDAO.getPolicyList" resultClass="egovMap">
	<![CDATA[
	
		SELECT FLE_IDN
		     , CDE_CDE
		     , CDE_NAM
		     , CDE_DES
		     , CREATE_USR
		     , TO_CHAR(CREATE_DT, 'YYYY-MM-DD') CREATE_DT
		  FROM CMT_DETAIL_POLICY_NIIM
		  
	]]>
	</select>
	
	
	<select id="policyDAO.getAuthPolicyList" resultClass="egovMap">
	<![CDATA[
	
		SELECT U.USE_AT
		     , U.FLE_IDN
		     , U.CDE_CDE
		     , U.AUTH_YN
		     , U.CREATE_USR
		     , TO_CHAR(U.CREATE_DT, 'YYYY-MM-DD') CREATE_DT
		  FROM CMT_DETAIL_POLICY_NIIM P
		     , ITR_USR_AUTH_POLICY_NIIM U
		 WHERE U.FLE_IDN = P.FLE_IDN
		   AND U.CDE_CDE = P.CDE_CDE
		   AND U.AUTH_YN = 'Y'
		  
	]]>
	</select>
	
</sqlMap>
